generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mesas {
  id Int @id @default(autoincrement())
  capacidad Int
  numero Int
  estado Boolean
  id_empleado Int
}

model Reservas {
  id Int @id @default(autoincrement())
  id_cliente Int
  id_mesa Int
  fecha_hora DateTime
  numero_personas Int
  confirmacion Boolean
}
