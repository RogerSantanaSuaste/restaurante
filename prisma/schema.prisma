generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Mesas {
  id_mesa Int @id @default(autoincrement())
  capacidad_mesa Int
  numero_mesa Int
  id_estado_mesa Int
  id_empleado Int
}

model estado_mesa {
  id  Int @id @default(autoincrement())
  estado Int
}

model Reservas {
  id_reservas Int @id @default(autoincrement())
  id_cliente Int
  id_mesa Int
  fecha_hora DateTime
  numero_personas_reserva Int
  id_confirmacion Int
}

model confirmacion {
  id Int @id @default(autoincrement())
  estado Int
}

model Empleados {
  id_empleados Int @id @default(autoincrement())
  nombre_empleado String
  puesto_empleado String
  salario_empelado Float
}

model Cliente {
  id_clientes Int @id @default(autoincrement())
  nombre_cliente String
  id_reservas Int
  numero_telefono Int
  email_cliente String
}
